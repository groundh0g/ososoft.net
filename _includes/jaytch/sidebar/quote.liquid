{% assign sidebarName = include.sidebarName | default: "quote" %}
{% assign quote = site.jaytch.sidebars[sidebarName].quote | default: page.quote %}
{% assign title = site.jaytch.sidebars[sidebarName].title %}

{% if quote %}
  <div class="sidebar">
    <div class="postSummary">
      {% if title %}<p class="title">{{ title }}</p>{% endif %}
      <p class="text">
        {% include jaytch/snips/quote.liquid quote=quote %}
        {% assign rendered=true %}
      </p>
    </div>
  </div>
{% endif %}