{% assign sidebarName = include.sidebarName | default: "posts" %}
{% assign limit = site.jaytch.sidebars[sidebarName].limit | default: 3 %}
{% assign words = site.jaytch.sidebars[sidebarName].words | default: 25 %}
{% assign showArchiveLink = site.jaytch.sidebars[sidebarName].showArchiveLink | default: false %}
{% assign archiveUrl = site.jaytch.sidebars[sidebarName].archiveUrl | default: "/archive" %}
{% assign showViewPostLink = site.jaytch.sidebars[sidebarName].showViewPostLink | default: false %}
{% assign category = site.jaytch.sidebars[sidebarName].category %}
{% assign tag = site.jaytch.sidebars[sidebarName].tag %}
{% assign title = site.jaytch.sidebars[sidebarName].title %}

{% if category %}
  {% assign posts = site.categories[category] %}
{% elsif tag %}
  {% assign posts = site.tags[tag] %}
{% else %}
  {% assign posts = site.posts %}
{% endif %}

<div class="sidebar">
  {% if title %}<p class="title">{{ title }}</p>{% endif %}
  {% include jaytch/snips/posts.liquid limit=limit words=words showArchiveLink=showArchiveLink archiveUrl=archiveUrl posts=posts showViewPostLink=showViewPostLink %}
</div>

{% if posts | size %}{% assign rendered=true %}{% endif%}